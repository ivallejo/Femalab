
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    @Styles.Render("~/Content/admintablescss")
    @Styles.Render("~/Content/toas")
}



<h1 class="h3 mb-2 text-gray-800">Pacientes</h1>
<p class="mb-4"></p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Listado de pacientes.</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">

            @*<a href="#" class="btn btn-success"><i class="fas fa-plus-circle"></i> Nuevo</a>*@
            <button type="button" id="btnAddPatient" class="btn btn-success"><i class="fas fa-plus-circle"></i> Nuevo </button>

            <div class="modal fade" id="ModalPatientAddOrEdit" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true" data-url='@Url.Action("AddOrEdit","Patient")'></div>

            <br />
            <br />

            <input type="hidden" id="hddUrlRemovePatient" value="@Url.Action("Remove","Patient")" />

            <table class="table table-responsive-sm table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th style="width:90px;text-align:center">Documento</th>
                        <th style="width:50px;text-align:center">Género</th>
                        <th>Paciente</th>
                        <th style="width:130px;text-align:center">Fecha Nacimiento</th>
                        <th style="width:150px;text-align:center">Fecha Registro</th>
                        <th style="width:130px;text-align:center">Acciones</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Documento</th>
                        <th>Género</th>
                        <th>Pacientes</th>
                        <th>Fecha Nacimiento</th>
                        <th>Fecha Registro</th>
                        <th>Acciones</th>
                    </tr>
                </tfoot>
                <tbody id="tbPatientBody"></tbody>
            </table>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/admintablesjs")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/toas")
    @Scripts.Render("~/bundles/Patient")
}